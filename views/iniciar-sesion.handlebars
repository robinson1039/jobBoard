<main class="contenedor">
    <form action="/iniciar-sesion" method="post" class="default-form">
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Tu email" required>
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu password" required>
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">Crea una cuenta</a>
            <a href="/reestablecer-password">Olvide mi password</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesion" class="btn btn-azul">
        </div>
    </form>
</main>